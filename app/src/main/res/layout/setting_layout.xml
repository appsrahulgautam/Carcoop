<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_round"
    android:padding="15dp"
    tools:context=".fragments.SettingsFragment">

    <RelativeLayout
        android:id="@+id/profilesetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_shape"
            android:padding="5dp"
            android:src="@drawable/avatar"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/editprofile_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/icon1"
            android:drawableRight="@drawable/ic_edit"
            android:drawableTint="@color/secondary"
            android:paddingStart="10dp"
            android:text="@string/profile"
            android:theme="@style/settingtextheading" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_TV"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_baseline_mail_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Sushillynhillsoftware@gmail.com"
                android:textSize="14sp"
                android:visibility="gone" />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#D9D9DA"
        app:layout_constraintTop_toBottomOf="@id/profilesetting" />

    <RelativeLayout
        android:id="@+id/aboutussetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profilesetting">

        <ImageView
            android:id="@+id/about1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_shape"
            android:padding="5dp"
            android:src="@drawable/ic_info"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/abouttx_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/about1"
            android:paddingStart="10dp"
            android:text="@string/aboutus"
            android:theme="@style/settingtextheading" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>