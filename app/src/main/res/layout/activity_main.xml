            <!--                            android:text="Select Country"-->
            <!--                            android:textColor="@color/black"-->
            <!--                            android:textSize="18sp" />-->

            <!--                </LinearLayout>-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:elevation="2dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="3dp">

                <Button
                    android:id="@+id/letsStart"
                    fontPath="fonts/gotham.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/accent"
                    android:onClick="letsstart"
                    android:text="LETS START"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                fontPath="fonts/aplight.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="By starting, you mean to agree with our Terms and Conditions and Privacy Policy."
                android:textColor="@color/white" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"></ProgressBar>
    </FrameLayout>

</ScrollView>