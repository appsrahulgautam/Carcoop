<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:text="@string/vehicleRegnumber"
            android:theme="@style/titleemgTxttheme" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/vehicleRegnoTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/secondary"
                android:padding="4dp"
                android:paddingStart="33dp"
                android:text="jasdlkfjasl"
                android:theme="@style/edittxttheme2"

                />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="start|center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/study"
                app:tint="@color/secondary" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:text="@string/carmake_brand"
            android:theme="@style/titleemgTxttheme" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carMakeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/secondary"
                android:padding="4dp"
                android:paddingStart="33dp"
                android:text="BMW"
                android:theme="@style/edittxttheme2" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="start|center"
                android:layout_marginBottom="3dp"
                android:src="@drawable/car"
                app:tint="@color/secondary" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:text="@string/carmodel"
            android:theme="@style/titleemgTxttheme" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carmodelTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/secondary"
                android:padding="4dp"
                android:paddingStart="33dp"
                android:text="XLV"
                android:theme="@style/edittxttheme2" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="start|center"
                android:layout_marginBottom="3dp"
                android:src="@drawable/insurance"
                app:tint="@color/secondary" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:text="@string/insureance"
            android:theme="@style/titleemgTxttheme"

            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/insurancetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/secondary"
                android:inputType="number"
                android:paddingStart="33dp"
                android:text="123456789"
                android:theme="@style/edittxttheme2" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="start|center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_life_insurance"
                app:tint="@color/secondary" />
        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:text="@string/location"
            android:theme="@style/titleemgTxttheme"

            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/location_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/secondary"
                android:paddingStart="33dp"
                android:text="#14 street 5"
                android:theme="@style/edittxttheme2" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="start|center"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_baseline_location"
                app:tint="@color/secondary" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_maincolor_border"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible"

        >

        <TextView
            android:id="@+id/addother_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/otherdriver_detail"
            android:theme="@style/titleemgTxttheme" />

        <LinearLayout
            android:id="@+id/otherdriverdetail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/fullname"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/od_usernameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/avatar"
                        app:tint="@color/secondary" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/licence_no"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/od_licenceNO_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2"

                        />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/ic_license"
                        app:tint="@color/secondary" />
                </FrameLayout>
            </LinearLayout>
            <!--            phone number-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/mobilenumber"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/od_MobileNO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:inputType="number"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2"

                        />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/ic_iphone"
                        app:tint="@color/secondary" />
                </FrameLayout>
            </LinearLayout>
            <!--home Address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/homeaddress"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/od_HomeAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2"

                        />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/ic_homeaddress"
                        app:tint="@color/secondary" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/insureance"
                    android:theme="@style/titleemgTxttheme"

                    />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/insuranceET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:inputType="number"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/ic_life_insurance"
                        app:tint="@color/secondary" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/vehicleRegnumber"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/odvehicleRegnoET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2"

                        />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/study"
                        app:tint="@color/secondary" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/carmake_brand"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/odcarMakeET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/car"
                        app:tint="@color/secondary" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:text="@string/carmodel"
                    android:theme="@style/titleemgTxttheme" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/odcarmodelET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/secondary"
                        android:paddingStart="33dp"
                        android:theme="@style/edittxttheme2" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/insurance"
                        app:tint="@color/secondary" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_camera"
            android:drawablePadding="10dp"
            android:drawableTint="@color/secondary"
            android:text="@string/imageupload"
            android:theme="@style/titleemgTxttheme" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="9dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emgprevImage_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_image"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_video_camera"
            android:drawablePadding="10dp"
            android:drawableTint="@color/secondary"
            android:text="@string/videoupload"
            android:theme="@style/titleemgTxttheme" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="9dp">

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/emgprevVideo_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/add_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_image"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

