<resources>
    <!-- Base application theme. -->
    <style name="Theme.Carcoop" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    profile deatail show theme-->
    <style name="profileTxTtheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/secondary</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--    profile detail titles text -->
    <style name="titleTxttheme">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#878585</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!--    Emg layout detail layout-->
    <style name="edittxttheme">
        <item name="android:textColorHint">#CFCECE</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="edittxttheme2">
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">#DDDDDD</item>
        <item name="android:textSize">12sp</item>

    </style>

    <!--    emg layout detail layout -->
    <style name="titleemgTxttheme">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>


    </style>


</resources>